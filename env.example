# CloudPulse Environment Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# Agent Configuration
# =============================================================================
NODE_ID=node-1
AGENT_PORT=8080

# =============================================================================
# ML Service Configuration
# =============================================================================
ML_SERVICE_PORT=5000
ML_SERVICE_HOST=0.0.0.0
AGENT_ENDPOINTS=http://cloudpulse-agent:8080
MODEL_SAVE_PATH=/app/models
FORECAST_INTERVAL_MINUTES=5
MODEL_RETRAIN_INTERVAL_HOURS=24
MODEL_BACKUP_COUNT=5

# ML Model Configuration
LSTM_SEQUENCE_LENGTH=60
LSTM_HIDDEN_UNITS=50
LSTM_DROPOUT_RATE=0.2
LSTM_EPOCHS=100
LSTM_BATCH_SIZE=32
LSTM_VALIDATION_SPLIT=0.2

PROPHET_GROWTH_MODEL=linear
PROPHET_SEASONALITY_MODE=multiplicative
PROPHET_YEARLY_SEASONALITY=true
PROPHET_WEEKLY_SEASONALITY=true
PROPHET_DAILY_SEASONALITY=false

# =============================================================================
# Dashboard Configuration
# =============================================================================
DASHBOARD_PORT=3000
DASHBOARD_HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000
NODE_ENV=development

# Dashboard URLs (internal Docker network)
AGENT_ENDPOINTS=http://cloudpulse-agent:8080
ML_SERVICE_URL=http://cloudpulse-ml:5000

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=cloudpulse-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_SECONDS=3600

# =============================================================================
# Monitoring & Alerting
# =============================================================================
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=85
ALERT_DISK_THRESHOLD=90
ALERT_NETWORK_THRESHOLD=1000

# =============================================================================
# Scaling Configuration
# =============================================================================
SCALING_ENABLED=true
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20
SCALE_UP_COOLDOWN_SECONDS=300
SCALE_DOWN_COOLDOWN_SECONDS=600
MIN_REPLICAS=1
MAX_REPLICAS=10

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
API_KEY=your_api_key_here_change_this_in_production
ENABLE_AUTH=false
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_COMPRESS=true

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=false
HOT_RELOAD=false
ENABLE_SWAGGER=true
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_FORECASTING=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_AUTO_SCALING=true
ENABLE_ALERTING=true
ENABLE_METRICS_COLLECTION=true
ENABLE_WEBHOOKS=false
